<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/extra_job_item_width"
    android:layout_height="@dimen/extra_job_item_height"
    android:background="@color/light_grey_bg"
    android:orientation="horizontal"
    android:id="@+id/linlay"
    android:padding="5dp"
    android:elevation="8dp"
    android:layout_margin="10dp"
    android:weightSum="1">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:singleLine="true"
            android:id="@+id/txt_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="carpentry"
            android:textColor="#000"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:singleLine="true"
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 june 2012"
            android:textSize="8dp"
            android:textStyle="bold" />

        <TextView
            android:singleLine="true"
            android:id="@+id/txt_client_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="0773303669"
            android:textColor="#000"
            android:textSize="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_job_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:text="mandava plaza 25"
            android:textColor="#000"
            android:textSize="6dp"
            android:textStyle="italic" />
    </LinearLayout>


    <ImageView
        android:id="@+id/img_job_picture"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="0.5"
        android:src="@drawable/ic_fridge" />


</LinearLayout>